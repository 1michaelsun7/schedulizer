extends main

block content2
	if leaderboard
		each evt, index in leaderboard 
			div.event.mix(class="#{evt.category}")
				div.eventid #{evt._id}
				div.col-xs-2
					div.thumbsUp 
						if !evt.isUserAttending(user._id)
							a.btn.btn-default.likeButton(role='button') I like it!
						if evt.isUserAttending(user._id)
							a.btn.btn-primary.unlikeButton(role='button') I like it!
					div.rank= index+1
					div.upvotes
						span.glyphicon.glyphicon-arrow-up #{evt.upvotes}
				div.col-xs-4(onclick="window.location='/event?id=#{evt._id}'")
					div.eventTitle #{evt.name}
					div.eventDesc #{evt.description}
				div.col-xs-3
					if user.isAdmin || user.isSuperAdmin
						if evt.sponsor == user.name
							a#unsponsorThis.btn.btn-primary(href='#', role='button') Sponsor this event!
						else
							a#sponsorThis.btn.btn-default(href='#', role='button') Sponsor this event!
					div.sponsorName Sponsor: #{evt.sponsor}
					div.happening Date Happening: October 15
